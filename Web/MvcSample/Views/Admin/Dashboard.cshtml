@{
    ViewData["Title"] = "Panel de Administración";
    ViewBag.HideFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-page">

    <!-- HEADER -->
    <header class="admin-header">
        <div class="admin-header-left">
            <div class="admin-logo-icon">
                <img src="~/img/logoUSC.png" alt="Logo USC" class="app-logo-image" />
            </div>
            <div class="admin-logo-text">
                <div class="admin-app-name">Sistema de Salas</div>
                <div class="admin-app-subtitle">Universidad Santiago de Cali</div>
            </div>
        </div>

        <div class="admin-header-right">
            <form asp-controller="Home" asp-action="Logout" method="post" style="display: inline;">
                <button type="submit" class="admin-logout" style="border: none; background: none; cursor: pointer; padding: 0;">
                    <span class="admin-logout-icon">⟲</span>
                    <span>Cerrar Sesión</span>
                </button>
            </form>

            <div class="admin-user-card">
                <div class="admin-user-avatar">@(Context.Session.GetString("Nombre")?.Substring(0, 1).ToUpper() ?? "A")@(Context.Session.GetString("Apellido")?.Substring(0, 1).ToUpper() ?? "U")</div>
                <div class="admin-user-text">
                    <div class="admin-user-name">@(Context.Session.GetString("Nombre") ?? "Admin Usuario")</div>
                    <div class="admin-user-role">Administrador</div>
                </div>
            </div>
        </div>
    </header>

    <!-- TABS -->
    <div class="admin-tabs">
        <a asp-controller="Admin" asp-action="Dashboard" class="admin-tab active">
            <span class="admin-tab-icon">📊</span>
            <span>Resumen</span>
        </a>
        <a asp-controller="Sala" asp-action="Index" class="admin-tab">
            <span class="admin-tab-icon">🏢</span>
            <span>Salas</span>
        </a>
        <a asp-controller="Equipo" asp-action="Index" class="admin-tab">
            <span class="admin-tab-icon">💻</span>
            <span>Equipos</span>
        </a>
        <a asp-controller="Usuario" asp-action="Index" class="admin-tab">
            <span class="admin-tab-icon">👥</span>
            <span>Usuarios</span>
        </a>
    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="admin-main">

        <!-- KPIs -->
        <section class="admin-kpi-grid">
            <article class="admin-kpi-card kpi-blue">
                <div class="admin-kpi-header">
                    <span class="admin-kpi-title">Total de Salas</span>
                    <div class="admin-kpi-icon">🏢</div>
                </div>
                <div class="admin-kpi-value">@(ViewBag.TotalSalas ?? 0)</div>
                <div class="admin-kpi-footer">
                    <span class="admin-kpi-trend up">▲ @(ViewBag.SalasActivas ?? 0)</span>
                    <span class="admin-kpi-sub">activas</span>
                </div>
            </article>

            <article class="admin-kpi-card kpi-teal">
                <div class="admin-kpi-header">
                    <span class="admin-kpi-title">Equipos Registrados</span>
                    <div class="admin-kpi-icon">💻</div>
                </div>
                <div class="admin-kpi-value">@(ViewBag.TotalEquipos ?? 0)</div>
                <div class="admin-kpi-footer">
                    <span class="admin-kpi-trend up">▲</span>
                    <span class="admin-kpi-sub">total registrados</span>
                </div>
            </article>

            <article class="admin-kpi-card kpi-indigo">
                <div class="admin-kpi-header">
                    <span class="admin-kpi-title">Usuarios Activos</span>
                    <div class="admin-kpi-icon">👥</div>
                </div>
                <div class="admin-kpi-value">@(ViewBag.TotalUsuarios ?? 0)</div>
                <div class="admin-kpi-footer">
                    <span class="admin-kpi-trend up">▲</span>
                    <span class="admin-kpi-sub">total usuarios</span>
                </div>
            </article>

            <article class="admin-kpi-card kpi-orange">
                <div class="admin-kpi-header">
                    <span class="admin-kpi-title">Salas Inactivas</span>
                    <div class="admin-kpi-icon">⚠</div>
                </div>
                <div class="admin-kpi-value">@((ViewBag.TotalSalas ?? 0) - (ViewBag.SalasActivas ?? 0))</div>
                <div class="admin-kpi-footer">
                    <span class="admin-kpi-trend">─</span>
                    <span class="admin-kpi-sub">requieren atención</span>
                </div>
            </article>
        </section>

        <!-- GRID: OCUPACIÓN + ESTADO EQUIPOS -->
        <section class="admin-panels-grid">

            <!-- OCUPACIÓN DE SALAS -->
            <article class="admin-panel">
                <header class="admin-panel-header panel-header-blue">
                    <span class="admin-panel-icon">〰</span>
                    <span class="admin-panel-title">Ocupación de Salas en Tiempo Real</span>
                </header>

                <div class="admin-panel-body">
                    @if (ViewBag.Salas != null)
                    {
                        var salas = (IList<Services.Models.SalaModels.SalaModel>)ViewBag.Salas;
                        @foreach (var sala in salas.Take(4))
                        {
                            var porcentaje = sala.Capacidad > 0 ? (sala.TotalEquipos * 100) / sala.Capacidad : 0;
                            var percentClass = porcentaje >= 80 ? "high" : porcentaje >= 50 ? "medium" : "low";
                            var fillClass = porcentaje >= 80 ? "fill-orange" : porcentaje >= 50 ? "fill-yellow" : "fill-green";
                            
                            <div class="room-occupancy-item">
                                <div class="room-occupancy-text">
                                    <div class="room-name">@sala.Numero</div>
                                    <div class="room-sub">Capacidad: @sala.Capacidad equipos</div>
                                </div>
                                <div class="room-occupancy-right">
                                    <div class="room-percent @percentClass">@porcentaje%</div>
                                    <div class="room-detail">@sala.TotalEquipos/@sala.Capacidad</div>
                                </div>
                                <div class="room-bar">
                                    <div class="room-bar-fill @fillClass" style="width: @porcentaje%;"></div>
                                </div>
                            </div>
                        }
                        @if (salas.Count == 0)
                        {
                            <div style="text-align: center; padding: 20px; color: #9ca3af;">
                                No hay salas registradas
                            </div>
                        }
                    }
                    else
                    {
                        <div style="text-align: center; padding: 20px; color: #9ca3af;">
                            No hay salas registradas
                        </div>
                    }
                </div>
            </article>

            <!-- ESTADO EQUIPOS -->
            <article class="admin-panel">
                <header class="admin-panel-header panel-header-green">
                    <span class="admin-panel-icon">🖥</span>
                    <span class="admin-panel-title">Estado de Equipos</span>
                </header>

                <div class="admin-panel-body panel-body-list">
                    @if (ViewBag.Equipos != null)
                    {
                        var equipos = (IList<Services.Models.EquipoModels.EquipoModel>)ViewBag.Equipos;
                        var totalEquipos = equipos.Count;
                        var disponibles = equipos.Count(e => e.Estado == Domain.Enums.EstadoEquipo.Disponible);
                        var asignados = equipos.Count(e => e.Estado == Domain.Enums.EstadoEquipo.Asignado);
                        var enMantenimiento = equipos.Count(e => e.Estado == Domain.Enums.EstadoEquipo.EnMantenimiento);
                        var dadosBaja = equipos.Count(e => e.Estado == Domain.Enums.EstadoEquipo.Baja);

                        var pctDisponibles = totalEquipos > 0 ? (disponibles * 100) / totalEquipos : 0;
                        var pctAsignados = totalEquipos > 0 ? (asignados * 100) / totalEquipos : 0;
                        var pctMantenimiento = totalEquipos > 0 ? (enMantenimiento * 100) / totalEquipos : 0;
                        var pctBaja = totalEquipos > 0 ? (dadosBaja * 100) / totalEquipos : 0;

                        <div class="status-row status-available">
                            <div class="status-left">
                                <span class="status-dot"></span>
                                <span class="status-label">Disponibles</span>
                            </div>
                            <div class="status-right">
                                <span class="status-count">@disponibles</span>
                                <span class="status-percent">@pctDisponibles%</span>
                            </div>
                        </div>

                        <div class="status-row status-assigned">
                            <div class="status-left">
                                <span class="status-dot"></span>
                                <span class="status-label">Asignados</span>
                            </div>
                            <div class="status-right">
                                <span class="status-count">@asignados</span>
                                <span class="status-percent">@pctAsignados%</span>
                            </div>
                        </div>

                        <div class="status-row status-blocked">
                            <div class="status-left">
                                <span class="status-dot"></span>
                                <span class="status-label">En Mantenimiento</span>
                            </div>
                            <div class="status-right">
                                <span class="status-count">@enMantenimiento</span>
                                <span class="status-percent">@pctMantenimiento%</span>
                            </div>
                        </div>

                        <div class="status-row status-retired">
                            <div class="status-left">
                                <span class="status-dot"></span>
                                <span class="status-label">Dados de Baja</span>
                            </div>
                            <div class="status-right">
                                <span class="status-count">@dadosBaja</span>
                                <span class="status-percent">@pctBaja%</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div style="text-align: center; padding: 20px; color: #9ca3af;">
                            No hay equipos registrados
                        </div>
                    }
                </div>
            </article>
        </section>

        <!-- ACTIVIDAD RECIENTE -->
        <section class="admin-activity-panel">
            <header class="admin-panel-header panel-header-dark">
                <span class="admin-panel-title">Actividad Reciente</span>
            </header>

            <div class="admin-panel-body activity-body">
                <div class="activity-row">
                    <div class="activity-left">
                        <span class="activity-dot act-blue"></span>
                        <div class="activity-text">
                            <div class="activity-title">Nueva sala creada</div>
                            <div class="activity-sub">Lab-C1 · Capacidad: 30</div>
                        </div>
                    </div>
                    <div class="activity-time">Hace 2 horas</div>
                </div>

                <div class="activity-row">
                    <div class="activity-left">
                        <span class="activity-dot act-green"></span>
                        <div class="activity-text">
                            <div class="activity-title">Equipo registrado</div>
                            <div class="activity-sub">EQ-246 · Dell OptiPlex</div>
                        </div>
                    </div>
                    <div class="activity-time">Hace 4 horas</div>
                </div>

                <div class="activity-row">
                    <div class="activity-left">
                        <span class="activity-dot act-pink"></span>
                        <div class="activity-text">
                            <div class="activity-title">Usuario creado</div>
                            <div class="activity-sub">María García · Coordinador</div>
                        </div>
                    </div>
                    <div class="activity-time">Hace 1 día</div>
                </div>

                <div class="activity-row">
                    <div class="activity-left">
                        <span class="activity-dot act-orange"></span>
                        <div class="activity-text">
                            <div class="activity-title">Sala actualizada</div>
                            <div class="activity-sub">Lab-A1 · Capacidad modificada</div>
                        </div>
                    </div>
                    <div class="activity-time">Hace 2 días</div>
                </div>
            </div>
        </section>

    </main>
</div>
