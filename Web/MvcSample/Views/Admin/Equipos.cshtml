@model IList<Services.Models.EquipoModels.EquipoModel>
@{
    ViewData["Title"] = "Gesti√≥n de Equipos";
    ViewBag.HideFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/salas.css" asp-append-version="true" />
}

<div class="admin-page">
    <!-- HEADER -->
    <header class="admin-header">
        <div class="admin-header-left">
            <div class="admin-logo-icon">
                <span class="material-icon">‚ñ§</span>
            </div>
            <div class="admin-logo-text">
                <div class="admin-app-name">Sistema de Salas</div>
                <div class="admin-app-subtitle">Universidad Santiago de Cali</div>
            </div>
        </div>

        <div class="admin-header-right">
            <form asp-controller="Home" asp-action="Logout" method="post" style="display: inline;">
                <button type="submit" class="admin-logout" style="border: none; background: none; cursor: pointer;">
                    <span class="admin-logout-icon">‚ü≤</span>
                    <span>Cerrar Sesi√≥n</span>
                </button>
            </form>

            <div class="admin-user-card">
                <div class="admin-user-avatar">@(Context.Session.GetString("Nombre")?.Substring(0, 1).ToUpper() ?? "A")@(Context.Session.GetString("Apellido")?.Substring(0, 1).ToUpper() ?? "U")</div>
                <div class="admin-user-text">
                    <div class="admin-user-name">@(Context.Session.GetString("Nombre") ?? "Admin Usuario")</div>
                    <div class="admin-user-role">Administrador</div>
                </div>
            </div>
        </div>
    </header>

    <!-- TABS -->
    <div class="admin-tabs">
        <a asp-controller="Admin" asp-action="Dashboard" class="admin-tab">
            <span class="admin-tab-icon">üìä</span>
            <span>Resumen</span>
        </a>
        <a asp-controller="Sala" asp-action="Index" class="admin-tab">
            <span class="admin-tab-icon">üè¢</span>
            <span>Salas</span>
        </a>
        <a asp-controller="Equipo" asp-action="Index" class="admin-tab active">
            <span class="admin-tab-icon">üíª</span>
            <span>Equipos</span>
        </a>
        <a asp-controller="Usuario" asp-action="Index" class="admin-tab">
            <span class="admin-tab-icon">üë•</span>
            <span>Usuarios</span>
        </a>
    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="admin-main">
        <div class="salas-header">
            <h1 class="salas-title">Gesti√≥n de Equipos</h1>
            <div class="salas-actions">
                <div class="salas-search-filter">
                    <div class="search-wrapper">
                        <span class="search-icon">üîç</span>
                        <input type="text" id="searchInput" class="search-input" placeholder="Buscar por c√≥digo o sala..." />
                    </div>
                    <select id="filterSala" class="filter-select">
                        <option value="">Todas las salas</option>
                        @if (ViewBag.Salas != null)
                        {
                            @foreach (var sala in (IList<Services.Models.SalaModels.SalaModel>)ViewBag.Salas)
                            {
                                <option value="@sala.Id">@sala.Numero</option>
                            }
                        }
                    </select>
                    <select id="filterEstado" class="filter-select">
                        <option value="">Todos los estados</option>
                        <option value="0">Disponible</option>
                        <option value="1">Asignado</option>
                        <option value="2">En Mantenimiento</option>
                        <option value="3">Da√±ado</option>
                        <option value="4">Baja</option>
                    </select>
                </div>
                <button type="button" class="btn-nueva-sala" id="btnNuevoEquipo">
                    <span>+</span>
                    <span>Nuevo Equipo</span>
                </button>
            </div>
        </div>

        <!-- Mensajes -->
        <div id="messageContainer" style="display: none;"></div>

        <!-- Tabla de Equipos -->
        <div class="salas-table-container">
            <table class="salas-table">
                <thead>
                    <tr>
                        <th>C√≥digo</th>
                        <th>Sala</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="equiposTableBody">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var equipo in Model)
                        {
                                <tr data-equipo-id="@equipo.Id" data-sala-id="@equipo.SalaId">
                                <td class="equipo-codigo">@equipo.Id.ToString().Substring(0, 8).ToUpper()</td>
                                <td>
                                    <span class="location-icon">üè¢</span>
                                    @equipo.SalaNumero
                                </td>
                                <td>
                                    @{
                                        var estadoClass = equipo.Estado switch
                                        {
                                            Domain.Enums.EstadoEquipo.Disponible => "status-active",
                                            Domain.Enums.EstadoEquipo.Asignado => "status-assigned",
                                            Domain.Enums.EstadoEquipo.EnMantenimiento => "status-maintenance",
                                            Domain.Enums.EstadoEquipo.Da√±ado => "status-damaged",
                                            Domain.Enums.EstadoEquipo.Baja => "status-inactive",
                                            _ => ""
                                        };
                                        var estadoTexto = equipo.Estado switch
                                        {
                                            Domain.Enums.EstadoEquipo.Disponible => "Disponible",
                                            Domain.Enums.EstadoEquipo.Asignado => "Asignado",
                                            Domain.Enums.EstadoEquipo.EnMantenimiento => "En Mantenimiento",
                                            Domain.Enums.EstadoEquipo.Da√±ado => "Da√±ado",
                                            Domain.Enums.EstadoEquipo.Baja => "Baja",
                                            _ => "Desconocido"
                                        };
                                    }
                                    <span class="status-badge @estadoClass" data-estado="@((int)equipo.Estado)">
                                        @estadoTexto
                                    </span>
                                </td>
                                <td class="actions-cell">
                                    <button type="button" class="action-btn edit-btn" data-equipo-id="@equipo.Id" title="Editar">
                                        <span>‚úèÔ∏è</span>
                                    </button>
                                    <button type="button" class="action-btn delete-btn" data-equipo-id="@equipo.Id" title="Eliminar">
                                        <span>üóëÔ∏è</span>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="no-data">No hay equipos registrados</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>

<!-- Modal Crear/Editar Equipo -->
<div id="equipoModal" class="modal-overlay" style="display: none;">
    <div class="modal-card">
        <div class="modal-header">
            <h2 class="modal-title" id="modalTitle">Registrar Nuevo Equipo</h2>
            <p class="modal-subtitle" id="modalSubtitle">Ingresa la informaci√≥n del equipo de c√≥mputo</p>
            <button type="button" class="modal-close" id="closeModal">‚úï</button>
        </div>

        <div id="modalMessage" class="modal-message" style="display: none;"></div>

        <form id="equipoForm" class="modal-form">
            @Html.AntiForgeryToken()
            <input type="hidden" id="equipoId" />

            <div class="form-field">
                <label for="SalaId">Sala *</label>
                <select id="SalaId" name="SalaId" required>
                    <option value="">Seleccionar sala</option>
                    @if (ViewBag.Salas != null)
                    {
                        @foreach (var sala in (IList<Services.Models.SalaModels.SalaModel>)ViewBag.Salas)
                        {
                            <option value="@sala.Id">@sala.Numero</option>
                        }
                    }
                </select>
                <span class="field-error"></span>
            </div>

            <div class="form-field">
                <label for="Estado">Estado *</label>
                <select id="Estado" name="Estado" required>
                    <option value="0">Disponible</option>
                    <option value="1">Asignado</option>
                    <option value="2">En Mantenimiento</option>
                    <option value="3">Da√±ado</option>
                    <option value="4">Baja</option>
                </select>
                <span class="field-error"></span>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-cancel" id="btnCancel">Cancelar</button>
                <button type="submit" class="btn-save" id="btnSave">Guardar</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/js/admin-equipos.js" asp-append-version="true"></script>
}

