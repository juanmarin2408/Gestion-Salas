@model IList<Services.Models.SalaModels.SalaModel>
@{
    ViewData["Title"] = "Gesti√≥n de Salas";
    ViewBag.HideFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/salas.css" asp-append-version="true" />
}

<div class="admin-page">
    <!-- HEADER -->
    <header class="admin-header">
        <div class="admin-header-left">
            <div class="admin-logo-icon">
                <span class="material-icon">‚ñ§</span>
            </div>
            <div class="admin-logo-text">
                <div class="admin-app-name">Sistema de Salas</div>
                <div class="admin-app-subtitle">Universidad Santiago de Cali</div>
            </div>
        </div>

        <div class="admin-header-right">
            <form asp-controller="Home" asp-action="Logout" method="post" style="display: inline;">
                <button type="submit" class="admin-logout" style="border: none; background: none; cursor: pointer;">
                    <span class="admin-logout-icon">‚ü≤</span>
                    <span>Cerrar Sesi√≥n</span>
                </button>
            </form>

            <div class="admin-user-card">
                <div class="admin-user-avatar">@(Context.Session.GetString("Nombre")?.Substring(0, 1).ToUpper() ?? "A")@(Context.Session.GetString("Apellido")?.Substring(0, 1).ToUpper() ?? "U")</div>
                <div class="admin-user-text">
                    <div class="admin-user-name">@(Context.Session.GetString("Nombre") ?? "Admin Usuario")</div>
                    <div class="admin-user-role">Administrador</div>
                </div>
            </div>
        </div>
    </header>

    <!-- TABS -->
    <div class="admin-tabs">
        <a asp-controller="Admin" asp-action="Dashboard" class="admin-tab">
            <span class="admin-tab-icon">üìä</span>
            <span>Resumen</span>
        </a>
        <a asp-controller="Sala" asp-action="Index" class="admin-tab active">
            <span class="admin-tab-icon">üè¢</span>
            <span>Salas</span>
        </a>
        <a asp-controller="Equipo" asp-action="Index" class="admin-tab">
            <span class="admin-tab-icon">üíª</span>
            <span>Equipos</span>
        </a>
        <a asp-controller="Usuario" asp-action="Index" class="admin-tab">
            <span class="admin-tab-icon">üë•</span>
            <span>Usuarios</span>
        </a>
    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="admin-main">
        <div class="salas-header">
            <h1 class="salas-title">Gesti√≥n de Salas</h1>
            <div class="salas-actions">
                <div class="salas-search-filter">
                    <div class="search-wrapper">
                        <span class="search-icon">üîç</span>
                        <input type="text" id="searchInput" class="search-input" placeholder="Buscar por n√∫mero o ubicaci√≥n..." />
                    </div>
                    <select id="filterEstado" class="filter-select">
                        <option value="">Todos los estados</option>
                        <option value="1">Activas</option>
                        <option value="0">Inactivas</option>
                    </select>
                </div>
                <button type="button" class="btn-nueva-sala" id="btnNuevaSala">
                    <span>+</span>
                    <span>Nueva Sala</span>
                </button>
            </div>
        </div>

        <!-- Mensajes -->
        <div id="messageContainer" style="display: none;"></div>

        <!-- Tabla de Salas -->
        <div class="salas-table-container">
            <table class="salas-table">
                <thead>
                    <tr>
                        <th>N√∫mero</th>
                        <th>Capacidad</th>
                        <th>Ubicaci√≥n</th>
                        <th>Equipos</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="salasTableBody">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var sala in Model)
                        {
                            <tr data-sala-id="@sala.Id">
                                <td class="sala-nombre">@sala.Numero</td>
                                <td>@sala.Capacidad</td>
                                <td>
                                    <span class="location-icon">üìç</span>
                                    @sala.Ubicacion
                                </td>
                                <td>@sala.TotalEquipos</td>
                                <td>
                                    <span class="status-badge @(sala.Estado == Domain.Enums.EstadoSala.Activa ? "status-active" : "status-inactive")">
                                        @(sala.Estado == Domain.Enums.EstadoSala.Activa ? "Activa" : "Inactiva")
                                    </span>
                                </td>
                                <td class="actions-cell">
                                    <button type="button" class="action-btn edit-btn" data-sala-id="@sala.Id" title="Editar">
                                        <span>‚úèÔ∏è</span>
                                    </button>
                                    <button type="button" class="action-btn delete-btn" data-sala-id="@sala.Id" title="Eliminar">
                                        <span>üóëÔ∏è</span>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="no-data">No hay salas registradas</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>

<!-- Modal Crear/Editar Sala -->
<div id="salaModal" class="modal-overlay" style="display: none;">
    <div class="modal-card">
        <div class="modal-header">
            <h2 class="modal-title" id="modalTitle">Crear Nueva Sala</h2>
            <p class="modal-subtitle" id="modalSubtitle">Ingresa la informaci√≥n de la nueva sala de sistemas</p>
            <button type="button" class="modal-close" id="closeModal">‚úï</button>
        </div>

        <div id="modalMessage" class="modal-message" style="display: none;"></div>

        <form id="salaForm" class="modal-form">
            @Html.AntiForgeryToken()
            <input type="hidden" id="salaId" />

            <div class="form-field">
                <label for="Numero">N√∫mero *</label>
                <input type="text" id="Numero" name="Numero" required maxlength="50" placeholder="Ej: 2408" />
                <span class="field-error"></span>
            </div>

            <div class="form-field">
                <label for="Capacidad">Capacidad *</label>
                <input type="number" id="Capacidad" name="Capacidad" required min="1" placeholder="Ej: 23" />
                <span class="field-error"></span>
            </div>

            <div class="form-field">
                <label for="Ubicacion">Ubicaci√≥n *</label>
                <input type="text" id="Ubicacion" name="Ubicacion" required maxlength="200" placeholder="Ej: bloque 2 piso 4" />
                <span class="field-error"></span>
            </div>

            <div class="form-field">
                <label for="Estado">Estado *</label>
                <select id="Estado" name="Estado" required>
                    <option value="1">Activa</option>
                    <option value="0">Inactiva</option>
                </select>
                <span class="field-error"></span>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-cancel" id="btnCancel">Cancelar</button>
                <button type="submit" class="btn-save" id="btnSave">Guardar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-salas.js" asp-append-version="true"></script>
}

