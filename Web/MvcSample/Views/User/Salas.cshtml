@{
    ViewData["Title"] = "Consultar Estado de Salas";
    ViewBag.HideFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-salas.css" asp-append-version="true" />
}

<div class="user-page">
    <!-- HEADER -->
    <header class="user-header">
        <div class="user-header-left">
            <div class="user-logo-icon">
                <img src="~/img/logoUSC.png" alt="Logo USC" class="app-logo-image" />
            </div>
            <div class="user-logo-text">
                <div class="user-app-name">Sistema de Salas</div>
                <div class="user-app-subtitle">Universidad Santiago de Cali</div>
            </div>
        </div>

        <div class="user-header-right">
            <form asp-controller="Home" asp-action="Logout" method="post" style="display: inline;">
                <button type="submit" class="user-logout" style="border: none; background: none; cursor: pointer; padding: 0;">
                    <span class="user-logout-icon">‚ü≤</span>
                    <span>Cerrar Sesi√≥n</span>
                </button>
            </form>

            <div class="user-user-card">
                <div class="user-user-avatar">@(Context.Session.GetString("Nombre")?.Substring(0, 1).ToUpper() ?? "U")@(Context.Session.GetString("Apellido")?.Substring(0, 1).ToUpper() ?? "S")</div>
                <div class="user-user-text">
                    <div class="user-user-name">@(Context.Session.GetString("Nombre") ?? "Usuario") @(Context.Session.GetString("Apellido") ?? "")</div>
                    <div class="user-user-role">Usuario</div>
                </div>
            </div>
        </div>
    </header>

    <!-- TABS -->
    <div class="user-tabs">
        <a asp-controller="User" asp-action="Index" class="user-tab">
            <span class="user-tab-icon">üè†</span>
            <span>Inicio</span>
        </a>
        <a asp-controller="User" asp-action="Salas" class="user-tab active">
            <span class="user-tab-icon">üè¢</span>
            <span>Salas</span>
        </a>
        <a asp-controller="User" asp-action="Equipos" class="user-tab">
            <span class="user-tab-icon">üíª</span>
            <span>Mis Equipos</span>
            @if ((ViewBag.EquiposAsignadosCount ?? 0) > 0)
            {
                <span class="user-tab-badge">@(ViewBag.EquiposAsignadosCount)</span>
            }
        </a>
        <a asp-controller="User" asp-action="Solicitudes" class="user-tab">
            <span class="user-tab-icon">üìã</span>
            <span>Solicitudes</span>
            @if ((ViewBag.SolicitudesPendientes ?? 0) > 0)
            {
                <span class="user-tab-badge">@(ViewBag.SolicitudesPendientes)</span>
            }
        </a>
        <a asp-controller="User" asp-action="Reportes" class="user-tab">
            <span class="user-tab-icon">‚ö†</span>
            <span>Reportes</span>
        </a>
        <a asp-controller="User" asp-action="Asesorias" class="user-tab">
            <span class="user-tab-icon">‚ùì</span>
            <span>Asesor√≠a</span>
            @if ((ViewBag.AsesoriasPendientes ?? 0) > 0)
            {
                <span class="user-tab-badge">@(ViewBag.AsesoriasPendientes)</span>
            }
        </a>
    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="user-main">
        <h1 class="salas-title">Consultar Estado de Salas</h1>

        <div class="salas-grid">
            @if (ViewBag.SalasConInfo != null)
            {
                var salasConInfo = ViewBag.SalasConInfo as dynamic;
                if (salasConInfo != null)
                {
                    @foreach (var item in salasConInfo)
                    {
                        var sala = item.Sala as Services.Models.SalaModels.SalaModel;
                        var estado = item.Estado as string;
                        var equiposDisponibles = (int)item.EquiposDisponibles;
                        var equiposAsignados = (int)item.EquiposAsignados;
                        var equiposEnMantenimiento = (int)item.EquiposEnMantenimiento;
                        var totalEquipos = sala.TotalEquipos;
                        
                        if (sala != null)
                        {
                            var estadoClass = estado switch
                            {
                                "Libre" => "estado-libre",
                                "Ocupada" => "estado-ocupada",
                                "Mantenimiento" => "estado-mantenimiento",
                                _ => "estado-libre"
                            };

                            var puedeSolicitar = sala.Estado == Domain.Enums.EstadoSala.Activa;

                            <div class="sala-card">
                                <div class="sala-icon">üè¢</div>
                                <div class="sala-header">
                                    <h3 class="sala-nombre">@sala.Numero</h3>
                                    <span class="sala-estado @estadoClass">@estado</span>
                                </div>
                                <div class="sala-info">
                                    <div class="sala-info-item">
                                        <span class="sala-info-icon">üìç</span>
                                        <span>@sala.Ubicacion</span>
                                    </div>
                                    <div class="sala-info-item">
                                        <span class="sala-info-icon">üë•</span>
                                        <span>Capacidad: @sala.Capacidad personas</span>
                                    </div>
                                    <div class="sala-info-item">
                                        <span class="sala-info-icon">üíª</span>
                                        <span>@equiposDisponibles disponibles / @totalEquipos totales</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(sala.UsuarioNombre))
                                    {
                                        <div class="sala-info-item sala-info-asignado">
                                            <span class="sala-info-icon">üë§</span>
                                            <span>Asignado a: @sala.UsuarioNombre</span>
                                        </div>
                                    }
                                </div>
                                <div class="sala-actions">
                                    <button type="button" class="btn-ver-detalles" data-sala-id="@sala.Id">
                                        Ver Detalles
                                    </button>
                                    <button type="button" class="btn-solicitar @(puedeSolicitar ? "" : "disabled")" data-sala-id="@sala.Id" @(puedeSolicitar ? "" : "disabled")>
                                        Reservar Sala
                                    </button>
                                </div>
                            </div>
                        }
                    }
                }
            }
        </div>
    </main>
</div>

<!-- Modal Detalles de Sala -->
<div id="modalDetalles" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalDetallesTitle">Detalles de Sala</h2>
            <button type="button" class="modal-close" onclick="cerrarModalDetalles()">&times;</button>
        </div>
        <div class="modal-body">
            <div class="modal-subtitle">Informaci√≥n completa de la sala</div>
            <div class="modal-info-grid">
                <div class="modal-info-col">
                    <div class="modal-info-item">
                        <span class="modal-info-label">Ubicaci√≥n</span>
                        <span class="modal-info-value" id="modalDetallesUbicacion"></span>
                    </div>
                    <div class="modal-info-item">
                        <span class="modal-info-label">Equipos Totales</span>
                        <span class="modal-info-value" id="modalDetallesTotalEquipos"></span>
                    </div>
                    <div class="modal-info-item">
                        <span class="modal-info-label">Estado</span>
                        <span class="modal-info-value" id="modalDetallesEstado"></span>
                    </div>
                </div>
                <div class="modal-info-col">
                    <div class="modal-info-item">
                        <span class="modal-info-label">Capacidad</span>
                        <span class="modal-info-value" id="modalDetallesCapacidad"></span>
                    </div>
                    <div class="modal-info-item">
                        <span class="modal-info-label">Equipos Disponibles</span>
                        <span class="modal-info-value" id="modalDetallesEquiposDisponibles"></span>
                    </div>
                    <div class="modal-info-item">
                        <span class="modal-info-label">Asignaci√≥n Docente</span>
                        <span class="modal-info-value" id="modalDetallesAsignacion"></span>
                    </div>
                </div>
            </div>
            <div class="modal-horario">
                <span class="modal-horario-icon">‚è∞</span>
                <span>Horario de disponibilidad: Lunes a Viernes, 8:00 AM - 6:00 PM</span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn-cerrar" onclick="cerrarModalDetalles()">Cerrar</button>
        </div>
    </div>
</div>

<!-- Modal Solicitar Sala -->
<div id="modalSolicitar" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalSolicitarTitle">Solicitar pr√©stamo de sala</h2>
            <button type="button" class="modal-close" onclick="cerrarModalSolicitar()">&times;</button>
        </div>
        <form id="formSolicitar" onsubmit="enviarSolicitud(event)">
            @Html.AntiForgeryToken()
            <div class="modal-body">
                <div class="modal-subtitle">Completa los datos para reservar la sala</div>
                <div class="tipo-prestamo-selector">
                    <label class="tipo-prestamo-option">
                        <input type="radio" name="tipoPrestamo" value="Equipo" checked />
                        <span>Solicitar equipo</span>
                    </label>
                    <label class="tipo-prestamo-option">
                        <input type="radio" name="tipoPrestamo" value="SalaCompleta" />
                        <span>Reservar sala completa</span>
                    </label>
                </div>
                <div class="modal-solicitar-info">
                    <div class="modal-solicitar-item">
                        <span class="modal-solicitar-label">Sala:</span>
                        <span class="modal-solicitar-value" id="modalSolicitarSala"></span>
                    </div>
                    <div class="modal-solicitar-item">
                        <span class="modal-solicitar-label">Ubicaci√≥n:</span>
                        <span class="modal-solicitar-value" id="modalSolicitarUbicacion"></span>
                    </div>
                    <div class="modal-solicitar-item">
                        <span class="modal-solicitar-label">Equipos disponibles:</span>
                        <span class="modal-solicitar-value" id="modalSolicitarEquipos"></span>
                    </div>
                </div>
                <div id="seccionSala" class="prestamo-section hidden">
                    <div class="form-group">
                        <label for="tituloUso">Nombre del evento (opcional)</label>
                        <input type="text" id="tituloUso" name="TituloUso" maxlength="150" class="form-control" placeholder="Ej: Taller de innovaci√≥n" />
                    </div>
                    <div class="form-group form-group-double">
                        <div>
                            <label for="fechaInicioUso">Inicio del pr√©stamo *</label>
                            <input type="datetime-local" id="fechaInicioUso" name="FechaInicioUso" class="form-control" />
                        </div>
                        <div>
                            <label for="fechaFinUso">Fin del pr√©stamo *</label>
                            <input type="datetime-local" id="fechaFinUso" name="FechaFinUso" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="motivoUso">Motivo o descripci√≥n *</label>
                        <textarea id="motivoUso" name="MotivoUso" class="form-control" maxlength="500" rows="3" placeholder="Describe brevemente el uso de la sala"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="numeroAsistentes">Asistentes estimados</label>
                        <input type="number" id="numeroAsistentes" name="NumeroAsistentes" class="form-control" min="1" placeholder="Ej: 20" />
                    </div>
                </div>
                <div id="seccionEquipo" class="prestamo-section">
                    <div class="form-group">
                        <label for="tiempoEstimadoEquipo">Tiempo estimado de uso *</label>
                        <select id="tiempoEstimadoEquipo" class="form-control">
                            <option value="">Selecciona el tiempo</option>
                            <option value="1">1 hora</option>
                            <option value="2">2 horas</option>
                            <option value="3">3 horas</option>
                            <option value="4">4 horas</option>
                            <option value="5">5 horas</option>
                            <option value="6">6 horas</option>
                            <option value="7">7 horas</option>
                            <option value="8">8 horas</option>
                        </select>
                    </div>
                </div>
                <input type="hidden" id="salaIdSolicitar" name="SalaId" />

                <div class="modal-reservas" id="reservasSalaWrapper">
                    <div class="modal-reservas-header">
                        Reservas pr√≥ximas en esta sala
                    </div>
                    <div id="reservasSalaList" class="modal-reservas-list">
                        <div class="sin-reservas">Sin reservas registradas</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-cancelar" onclick="cerrarModalSolicitar()">Cancelar</button>
                <button type="submit" class="btn-enviar">Enviar Solicitud</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/user-salas.js" asp-append-version="true"></script>
}

