@{
    ViewData["Title"] = "Panel de Coordinador";
    ViewBag.HideFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <style>
        .tab-badge {
            background-color: #ef4444;
            color: #ffffff;
            font-size: 11px;
            font-weight: 600;
            padding: 2px 6px;
            border-radius: 10px;
            margin-left: 6px;
        }

        .admin-kpi-trend.urgent {
            color: #ef4444;
        }

        .solicitud-item, .equipo-bloqueado-item {
            padding: 12px 0;
            border-bottom: 1px solid #e5e7eb;
        }

        .solicitud-item:last-child, .equipo-bloqueado-item:last-child {
            border-bottom: none;
        }

        .solicitud-header, .equipo-bloqueado-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 6px;
        }

        .solicitud-nombre, .equipo-codigo {
            font-weight: 600;
            color: #0f172a;
            font-size: 14px;
        }

        .solicitud-badge {
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .urgent-badge {
            background-color: #fee2e2;
            color: #dc2626;
        }

        .medium-badge {
            background-color: #f3f4f6;
            color: #6b7280;
        }

        .solicitud-details, .equipo-bloqueado-details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 12px;
            color: #6b7280;
        }

        .solicitud-time {
            color: #9ca3af;
        }
    </style>
}

<div class="admin-page">
    <!-- HEADER -->
    <header class="admin-header">
        <div class="admin-header-left">
            <div class="admin-logo-icon">
                <span class="material-icon">â–¤</span>
            </div>
            <div class="admin-logo-text">
                <div class="admin-app-name">Sistema de Salas</div>
                <div class="admin-app-subtitle">Universidad Santiago de Cali</div>
            </div>
        </div>

        <div class="admin-header-right">
            <form asp-controller="Home" asp-action="Logout" method="post" style="display: inline;">
                <button type="submit" class="admin-logout" style="border: none; background: none; cursor: pointer; padding: 0;">
                    <span class="admin-logout-icon">âŸ²</span>
                    <span>Cerrar SesiÃ³n</span>
                </button>
            </form>

            <div class="admin-user-card">
                <div class="admin-user-avatar">@(Context.Session.GetString("Nombre")?.Substring(0, 1).ToUpper() ?? "C")@(Context.Session.GetString("Apellido")?.Substring(0, 1).ToUpper() ?? "P")</div>
                <div class="admin-user-text">
                    <div class="admin-user-name">@(Context.Session.GetString("Nombre") ?? "Coordinador") @(Context.Session.GetString("Apellido") ?? "")</div>
                    <div class="admin-user-role">Coordinador</div>
                </div>
            </div>
        </div>
    </header>

    <!-- TABS -->
    <div class="admin-tabs">
        <a asp-controller="Coordinador" asp-action="Index" class="admin-tab active">
            <span class="admin-tab-icon">ðŸ“Š</span>
            <span>Resumen</span>
        </a>
        <a asp-controller="Coordinador" asp-action="Solicitudes" class="admin-tab">
            <span class="admin-tab-icon">ðŸ“‹</span>
            <span>Solicitudes</span>
            @if ((ViewBag.SolicitudesPendientes ?? 0) > 0)
            {
                <span class="tab-badge">@(ViewBag.SolicitudesPendientes)</span>
            }
        </a>
        <a asp-controller="Coordinador" asp-action="Equipos" class="admin-tab">
            <span class="admin-tab-icon">ðŸ’»</span>
            <span>Equipos</span>
        </a>
        <a asp-controller="Coordinador" asp-action="Reportes" class="admin-tab">
            <span class="admin-tab-icon">ðŸ“„</span>
            <span>Reportes</span>
            @if ((ViewBag.ReportesDanos ?? 0) > 0)
            {
                <span class="tab-badge">@(ViewBag.ReportesDanos)</span>
            }
        </a>
        <a asp-controller="Coordinador" asp-action="Calendario" class="admin-tab">
            <span class="admin-tab-icon">ðŸ“…</span>
            <span>Calendario</span>
        </a>
    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="admin-main">
        <!-- KPIs -->
        <section class="admin-kpi-grid">
            <article class="admin-kpi-card kpi-blue">
                <div class="admin-kpi-header">
                    <span class="admin-kpi-title">Solicitudes Pendientes</span>
                    <div class="admin-kpi-icon">ðŸ“‹</div>
                </div>
                <div class="admin-kpi-value">@(ViewBag.SolicitudesPendientes ?? 0)</div>
                <div class="admin-kpi-footer">
                    @if ((ViewBag.SolicitudesUrgentes ?? 0) > 0)
                    {
                        <span class="admin-kpi-trend urgent">â–² @(ViewBag.SolicitudesUrgentes ?? 0)</span>
                        <span class="admin-kpi-sub">requieren atenciÃ³n urgente</span>
                    }
                    else
                    {
                        <span class="admin-kpi-trend">â”€</span>
                        <span class="admin-kpi-sub">sin urgencias</span>
                    }
                </div>
            </article>

            <article class="admin-kpi-card kpi-teal">
                <div class="admin-kpi-header">
                    <span class="admin-kpi-title">Equipos Bloqueados</span>
                    <div class="admin-kpi-icon">ðŸ’»</div>
                </div>
                <div class="admin-kpi-value">@(ViewBag.EquiposBloqueados ?? 0)</div>
                <div class="admin-kpi-footer">
                    <span class="admin-kpi-trend">â”€</span>
                    <span class="admin-kpi-sub">requieren atenciÃ³n</span>
                </div>
            </article>

            <article class="admin-kpi-card kpi-indigo">
                <div class="admin-kpi-header">
                    <span class="admin-kpi-title">Reportes de DaÃ±os</span>
                    <div class="admin-kpi-icon">âš </div>
                </div>
                <div class="admin-kpi-value">@(ViewBag.ReportesDanos ?? 0)</div>
                <div class="admin-kpi-footer">
                    <span class="admin-kpi-trend">â”€</span>
                    <span class="admin-kpi-sub">pendientes de revisiÃ³n</span>
                </div>
            </article>

            <article class="admin-kpi-card kpi-orange">
                <div class="admin-kpi-header">
                    <span class="admin-kpi-title">Equipos Disponibles</span>
                    <div class="admin-kpi-icon">âœ“</div>
                </div>
                <div class="admin-kpi-value">@(ViewBag.EquiposDisponibles ?? 0)</div>
                <div class="admin-kpi-footer">
                    <span class="admin-kpi-trend up">â–²</span>
                    <span class="admin-kpi-sub">listos para asignar</span>
                </div>
            </article>
        </section>

        <!-- GRID: SOLICITUDES + EQUIPOS BLOQUEADOS -->
        <section class="admin-panels-grid">
            <!-- SOLICITUDES PENDIENTES -->
            <article class="admin-panel">
                <header class="admin-panel-header panel-header-blue">
                    <span class="admin-panel-icon">ðŸ“‹</span>
                    <span class="admin-panel-title">Solicitudes Pendientes</span>
                </header>

                <div class="admin-panel-body panel-body-list">
                    <!-- TODO: Implementar cuando tengas el modelo de solicitudes -->
                    <div class="solicitud-item">
                        <div class="solicitud-header">
                            <span class="solicitud-nombre">Juan PÃ©rez</span>
                            <span class="solicitud-badge urgent-badge">Urgente</span>
                        </div>
                        <div class="solicitud-details">
                            <span>Sala: Lab-A1</span>
                            <span class="solicitud-time">Hace 2 horas</span>
                        </div>
                    </div>

                    <div class="solicitud-item">
                        <div class="solicitud-header">
                            <span class="solicitud-nombre">MarÃ­a GarcÃ­a</span>
                        </div>
                        <div class="solicitud-details">
                            <span>Sala: Lab-B1</span>
                            <span class="solicitud-time">Hace 5 horas</span>
                        </div>
                    </div>

                    <div class="solicitud-item">
                        <div class="solicitud-header">
                            <span class="solicitud-nombre">Pedro LÃ³pez</span>
                            <span class="solicitud-badge urgent-badge">Urgente</span>
                        </div>
                        <div class="solicitud-details">
                            <span>Sala: Lab-A2</span>
                            <span class="solicitud-time">Hace 1 dÃ­a</span>
                        </div>
                    </div>
                </div>
            </article>

            <!-- EQUIPOS BLOQUEADOS RECIENTES -->
            <article class="admin-panel">
                <header class="admin-panel-header panel-header-green">
                    <span class="admin-panel-icon">ðŸ’»</span>
                    <span class="admin-panel-title">Equipos Bloqueados Recientes</span>
                </header>

                <div class="admin-panel-body panel-body-list">
                    @if (ViewBag.Equipos != null)
                    {
                        var equiposBloqueados = ((IList<Services.Models.EquipoModels.EquipoModel>)ViewBag.Equipos)
                            .Where(e => e.Estado == Domain.Enums.EstadoEquipo.EnMantenimiento || e.Estado == Domain.Enums.EstadoEquipo.DaÃ±ado)
                            .Take(5)
                            .ToList();

                        @foreach (var equipo in equiposBloqueados)
                        {
                            var prioridad = equipo.Estado == Domain.Enums.EstadoEquipo.DaÃ±ado ? "Alta" : "Media";
                            var prioridadClass = equipo.Estado == Domain.Enums.EstadoEquipo.DaÃ±ado ? "urgent-badge" : "medium-badge";
                            var motivo = equipo.Estado == Domain.Enums.EstadoEquipo.DaÃ±ado ? "Equipo daÃ±ado" : "Mantenimiento preventivo";

                            <div class="equipo-bloqueado-item">
                                <div class="equipo-bloqueado-header">
                                    <span class="equipo-codigo">@equipo.Id.ToString().Substring(0, 8).ToUpper()</span>
                                    <span class="solicitud-badge @prioridadClass">@prioridad</span>
                                </div>
                                <div class="equipo-bloqueado-details">
                                    <span>@motivo</span>
                                    <span>Sala: @equipo.SalaNumero</span>
                                </div>
                            </div>
                        }

                        @if (equiposBloqueados.Count == 0)
                        {
                            <div style="text-align: center; padding: 20px; color: #9ca3af;">
                                No hay equipos bloqueados
                            </div>
                        }
                    }
                    else
                    {
                        <div style="text-align: center; padding: 20px; color: #9ca3af;">
                            No hay equipos bloqueados
                        </div>
                    }
                </div>
            </article>
        </section>

        <!-- ESTADO DE OCUPACIÃ“N - TIEMPO REAL -->
        <section class="admin-panels-grid">
            <article class="admin-panel">
                <header class="admin-panel-header panel-header-blue">
                    <span class="admin-panel-icon">ã€°</span>
                    <span class="admin-panel-title">Estado de OcupaciÃ³n - Tiempo Real</span>
                </header>

                <div class="admin-panel-body">
                    @if (ViewBag.Salas != null)
                    {
                        var salas = (IList<Services.Models.SalaModels.SalaModel>)ViewBag.Salas;
                        @foreach (var sala in salas.Take(4))
                        {
                            var porcentaje = sala.Capacidad > 0 ? (sala.TotalEquipos * 100) / sala.Capacidad : 0;
                            var percentClass = porcentaje >= 80 ? "high" : porcentaje >= 50 ? "medium" : "low";
                            var fillClass = porcentaje >= 80 ? "fill-orange" : porcentaje >= 50 ? "fill-yellow" : "fill-green";
                            
                            <div class="room-occupancy-item">
                                <div class="room-occupancy-text">
                                    <div class="room-name">@sala.Numero</div>
                                    <div class="room-sub">Capacidad: @sala.Capacidad equipos</div>
                                </div>
                                <div class="room-occupancy-right">
                                    <div class="room-percent @percentClass">@porcentaje%</div>
                                    <div class="room-detail">@sala.TotalEquipos/@sala.Capacidad equipos</div>
                                </div>
                                <div class="room-bar">
                                    <div class="room-bar-fill @fillClass" style="width: @porcentaje%;"></div>
                                </div>
                            </div>
                        }
                        @if (salas.Count == 0)
                        {
                            <div style="text-align: center; padding: 20px; color: #9ca3af;">
                                No hay salas registradas
                            </div>
                        }
                    }
                    else
                    {
                        <div style="text-align: center; padding: 20px; color: #9ca3af;">
                            No hay salas registradas
                        </div>
                    }
                </div>
            </article>

            <!-- ESTADO EQUIPOS -->
            <article class="admin-panel">
                <header class="admin-panel-header panel-header-green">
                    <span class="admin-panel-icon">ðŸ–¥</span>
                    <span class="admin-panel-title">Estado de Equipos</span>
                </header>

                <div class="admin-panel-body panel-body-list">
                    @if (ViewBag.Equipos != null)
                    {
                        var equipos = (IList<Services.Models.EquipoModels.EquipoModel>)ViewBag.Equipos;
                        var totalEquipos = equipos.Count;
                        var disponibles = equipos.Count(e => e.Estado == Domain.Enums.EstadoEquipo.Disponible);
                        var asignados = equipos.Count(e => e.Estado == Domain.Enums.EstadoEquipo.Asignado);
                        var enMantenimiento = equipos.Count(e => e.Estado == Domain.Enums.EstadoEquipo.EnMantenimiento);
                        var dadosBaja = equipos.Count(e => e.Estado == Domain.Enums.EstadoEquipo.Baja);

                        var pctDisponibles = totalEquipos > 0 ? (disponibles * 100) / totalEquipos : 0;
                        var pctAsignados = totalEquipos > 0 ? (asignados * 100) / totalEquipos : 0;
                        var pctMantenimiento = totalEquipos > 0 ? (enMantenimiento * 100) / totalEquipos : 0;
                        var pctBaja = totalEquipos > 0 ? (dadosBaja * 100) / totalEquipos : 0;

                        <div class="status-row status-available">
                            <div class="status-left">
                                <span class="status-dot"></span>
                                <span class="status-label">Disponibles</span>
                            </div>
                            <div class="status-right">
                                <span class="status-count">@disponibles</span>
                                <span class="status-percent">@pctDisponibles%</span>
                            </div>
                        </div>

                        <div class="status-row status-assigned">
                            <div class="status-left">
                                <span class="status-dot"></span>
                                <span class="status-label">Asignados</span>
                            </div>
                            <div class="status-right">
                                <span class="status-count">@asignados</span>
                                <span class="status-percent">@pctAsignados%</span>
                            </div>
                        </div>

                        <div class="status-row status-blocked">
                            <div class="status-left">
                                <span class="status-dot"></span>
                                <span class="status-label">En Mantenimiento</span>
                            </div>
                            <div class="status-right">
                                <span class="status-count">@enMantenimiento</span>
                                <span class="status-percent">@pctMantenimiento%</span>
                            </div>
                        </div>

                        <div class="status-row status-retired">
                            <div class="status-left">
                                <span class="status-dot"></span>
                                <span class="status-label">Dados de Baja</span>
                            </div>
                            <div class="status-right">
                                <span class="status-count">@dadosBaja</span>
                                <span class="status-percent">@pctBaja%</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div style="text-align: center; padding: 20px; color: #9ca3af;">
                            No hay equipos registrados
                        </div>
                    }
                </div>
            </article>
        </section>
    </main>
</div>

