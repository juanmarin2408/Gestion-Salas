@model IList<Services.Models.CalendarioModels.OcupacionModel>
@{
    ViewData["Title"] = "Calendario Semanal";
    ViewBag.HideFooter = true;
    
    // Obtener la fecha de la semana desde ViewBag (calculada en el controlador)
    var lunesSemana = ViewBag.FechaSemana != null ? (DateTime)ViewBag.FechaSemana : DateTime.UtcNow.Date;
    
    // Asegurar que sea el lunes de esa semana
    var diaSemana = (int)lunesSemana.DayOfWeek;
    if (diaSemana == 0) diaSemana = 7;
    lunesSemana = lunesSemana.AddDays(-(diaSemana - 1)).Date;
    
    // D√≠as de la semana
    var diasSemana = new[]
    {
        lunesSemana,
        lunesSemana.AddDays(1),
        lunesSemana.AddDays(2),
        lunesSemana.AddDays(3),
        lunesSemana.AddDays(4)
    };
    
    // Horas del d√≠a (10:00 a 17:00 = 8 horas)
    var horas = Enumerable.Range(10, 8).Select(h => new { Hora = h, Texto = $"{h:00}:00" }).ToList();
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/coordinador-calendario.css" asp-append-version="true" />
}

<div class="admin-page">
    <!-- HEADER -->
    <header class="admin-header">
        <div class="admin-header-left">
            <div class="admin-logo-icon">
                <span class="material-icon">‚ñ§</span>
            </div>
            <div class="admin-logo-text">
                <div class="admin-app-name">Sistema de Salas</div>
                <div class="admin-app-subtitle">Universidad Santiago de Cali</div>
            </div>
        </div>

        <div class="admin-header-right">
            <form asp-controller="Home" asp-action="Logout" method="post" style="display: inline;">
                <button type="submit" class="admin-logout" style="border: none; background: none; cursor: pointer; padding: 0;">
                    <span class="admin-logout-icon">‚ü≤</span>
                    <span>Cerrar Sesi√≥n</span>
                </button>
            </form>

            <div class="admin-user-card">
                <div class="admin-user-avatar">@(Context.Session.GetString("Nombre")?.Substring(0, 1).ToUpper() ?? "C")@(Context.Session.GetString("Apellido")?.Substring(0, 1).ToUpper() ?? "P")</div>
                <div class="admin-user-text">
                    <div class="admin-user-name">@(Context.Session.GetString("Nombre") ?? "Coordinador") @(Context.Session.GetString("Apellido") ?? "")</div>
                    <div class="admin-user-role">Coordinador</div>
                </div>
            </div>
        </div>
    </header>

    <!-- TABS -->
    <div class="admin-tabs">
        <a asp-controller="Coordinador" asp-action="Index" class="admin-tab">
            <span class="admin-tab-icon">üìä</span>
            <span>Resumen</span>
        </a>
        <a asp-controller="Coordinador" asp-action="Solicitudes" class="admin-tab">
            <span class="admin-tab-icon">üìã</span>
            <span>Solicitudes</span>
            @if ((ViewBag.SolicitudesPendientes ?? 0) > 0)
            {
                <span class="tab-badge">@(ViewBag.SolicitudesPendientes)</span>
            }
        </a>
        <a asp-controller="Coordinador" asp-action="Equipos" class="admin-tab">
            <span class="admin-tab-icon">üíª</span>
            <span>Equipos</span>
        </a>
        <a asp-controller="Coordinador" asp-action="Reportes" class="admin-tab">
            <span class="admin-tab-icon">üìÑ</span>
            <span>Reportes</span>
            @if ((ViewBag.ReportesDanos ?? 0) > 0)
            {
                <span class="tab-badge">@(ViewBag.ReportesDanos)</span>
            }
        </a>
        <a asp-controller="Coordinador" asp-action="Calendario" class="admin-tab active">
            <span class="admin-tab-icon">üìÖ</span>
            <span>Calendario</span>
        </a>
    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="admin-main">
        <div class="calendario-header">
            <h1 class="calendario-title">
                <span>üìÖ</span>
                <span>Calendario Semanal de Ocupaci√≥n</span>
            </h1>
            <div class="calendario-nav">
                <button type="button" class="btn-nav" id="btnAnteriorSemana">
                    <span>‚Üê</span>
                    <span>Anterior</span>
                </button>
                <button type="button" class="btn-nav btn-today" id="btnHoy">
                    Hoy
                </button>
                <span class="semana-info" id="semanaInfo" data-fecha-semana="@lunesSemana.ToString("yyyy-MM-dd")">
                    @lunesSemana.ToString("dd/MM/yyyy") - @lunesSemana.AddDays(4).ToString("dd/MM/yyyy")
                </span>
                <button type="button" class="btn-nav" id="btnSiguienteSemana">
                    <span>Siguiente</span>
                    <span>‚Üí</span>
                </button>
            </div>
        </div>

        <div class="calendario-filters">
            <select id="filterSala" class="filter-select" data-sala-filtro="@(ViewBag.SalaFiltro?.ToString() ?? "")">
                <option value="">Selecciona una sala</option>
                @if (ViewBag.Salas != null)
                {
                    var salas = (IList<Services.Models.SalaModels.SalaModel>)ViewBag.Salas;
                    var salaSeleccionada = (Guid?)ViewBag.SalaFiltro;
                    var salaActual = salaSeleccionada.HasValue 
                        ? salas.FirstOrDefault(s => s.Id == salaSeleccionada.Value) 
                        : salas.FirstOrDefault();
                    
                    @foreach (var sala in salas)
                    {
                        var selected = salaActual != null && sala.Id == salaActual.Id ? "selected" : "";
                        <option value="@sala.Id" selected="@selected">@sala.Numero</option>
                    }
                }
            </select>
        </div>

        <!-- Calendario -->
        @{
            var salasList = ViewBag.Salas != null ? (IList<Services.Models.SalaModels.SalaModel>)ViewBag.Salas : new List<Services.Models.SalaModels.SalaModel>();
            var salaFiltro = (Guid?)ViewBag.SalaFiltro;
            var salaMostrar = salaFiltro.HasValue 
                ? salasList.FirstOrDefault(s => s.Id == salaFiltro.Value) 
                : salasList.FirstOrDefault();
        }

        @if (salaMostrar != null)
        {
            <div style="margin-bottom: 16px; font-size: 16px; font-weight: 600; color: #0f172a;">
                Sala: @salaMostrar.Numero
            </div>
        }

        <div class="calendario-container">
            <table class="calendario-table">
                <thead>
                    <tr>
                        <th>Hora</th>
                        <th>Lunes<br />@diasSemana[0].ToString("dd/MM")</th>
                        <th>Martes<br />@diasSemana[1].ToString("dd/MM")</th>
                        <th>Mi√©rcoles<br />@diasSemana[2].ToString("dd/MM")</th>
                        <th>Jueves<br />@diasSemana[3].ToString("dd/MM")</th>
                        <th>Viernes<br />@diasSemana[4].ToString("dd/MM")</th>
                    </tr>
                </thead>
                <tbody id="calendarioBody">
                    @if (salaMostrar != null)
                    {
                        @foreach (var hora in horas)
                        {
                            <tr>
                                <td class="time-cell">@hora.Texto</td>
                                @foreach (var dia in diasSemana)
                                {
                                    var horaInicio = new DateTime(dia.Year, dia.Month, dia.Day, hora.Hora, 0, 0, DateTimeKind.Utc);
                                    var horaFin = horaInicio.AddHours(1);
                                    
                                    // Buscar ocupaciones que intersecten con este slot
                                    var ocupacionesSlot = Model?.Where(o => 
                                        o.SalaId == salaMostrar.Id &&
                                        o.FechaInicio < horaFin &&
                                        o.FechaFin > horaInicio
                                    ).ToList() ?? new List<Services.Models.CalendarioModels.OcupacionModel>();

                                    @if (ocupacionesSlot.Any())
                                    {
                                        var ocupacion = ocupacionesSlot.First();
                                        var esSalaCompleta = ocupacion.EsSalaCompleta;
                                        <td class="slot-cell">
                                            <div class="slot-ocupado @(esSalaCompleta ? "slot-ocupado-sala" : "")" 
                                                 title="@ocupacion.UsuarioNombre - @ocupacion.FechaInicio.ToString("HH:mm") a @ocupacion.FechaFin.ToString("HH:mm")">
                                                <span class="ocupacion-nombre">@ocupacion.UsuarioNombre</span>
                                                <span class="ocupacion-hora">@ocupacion.FechaInicio.ToString("HH:mm") - @ocupacion.FechaFin.ToString("HH:mm")</span>
                                            </div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="slot-cell">
                                            <div class="slot-libre">Libre</div>
                                        </td>
                                    }
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" style="text-align: center; padding: 40px; color: #9ca3af;">
                                No hay salas registradas o no se ha seleccionado una sala
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>

@section Scripts {
    <script src="~/js/coordinador-calendario.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Inicializar variables desde los data attributes
            let fechaSemana = $('#semanaInfo').data('fecha-semana') || '';
            let salaFiltro = $('#filterSala').data('sala-filtro') || '';

            // Inicializar el filtro de sala si hay uno seleccionado
            if (salaFiltro) {
                $('#filterSala').val(salaFiltro);
            }

            // Actualizar variables globales para que el archivo externo las use
            window.calendarioConfig = {
                fechaSemana: fechaSemana,
                salaFiltro: salaFiltro
            };
        });
    </script>
}

