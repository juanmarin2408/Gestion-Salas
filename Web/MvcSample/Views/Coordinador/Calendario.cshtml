@model IList<Services.Models.CalendarioModels.OcupacionModel>
@{
    ViewData["Title"] = "Calendario Semanal";
    ViewBag.HideFooter = true;
    
    // Obtener la fecha de la semana desde ViewBag (calculada en el controlador)
    var lunesSemana = ViewBag.FechaSemana != null ? (DateTime)ViewBag.FechaSemana : DateTime.UtcNow.Date;
    
    // Asegurar que sea el lunes de esa semana
    var diaSemana = (int)lunesSemana.DayOfWeek;
    if (diaSemana == 0) diaSemana = 7;
    lunesSemana = lunesSemana.AddDays(-(diaSemana - 1)).Date;
    
    // D√≠as de la semana
    var diasSemana = new[]
    {
        lunesSemana,
        lunesSemana.AddDays(1),
        lunesSemana.AddDays(2),
        lunesSemana.AddDays(3),
        lunesSemana.AddDays(4)
    };
    
    // Horas del d√≠a (10:00 a 17:00 = 8 horas)
    var horas = Enumerable.Range(10, 8).Select(h => new { Hora = h, Texto = $"{h:00}:00" }).ToList();
}

