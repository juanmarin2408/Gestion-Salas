@model Services.Models.UserModels.AddUserModel

@{
    ViewData["Title"] = "Crear cuenta";
    ViewBag.HideFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
}

<div class="login-page">
    <div class="login-card">
        <!-- Header -->
        <div class="login-card-header">
            <div class="login-card-icon register-icon">
                <span>👤</span>
            </div>
            <h1 class="login-title">Crear Cuenta</h1>
            <p class="login-subtitle">
                Regístrate para gestionar salas, equipos y reservas
            </p>
        </div>

        @* Mensaje de error general del registro *@
        @if (ViewBag.RegisterError != null)
        {
            <div class="login-error">
                @ViewBag.RegisterError
            </div>
        }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Formulario -->
        <form asp-action="Register" asp-controller="Home" method="post" class="login-form">
            @Html.AntiForgeryToken()

            <div class="login-field">
                <label asp-for="Nombre"></label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#128100;
                    </span>
                    <input asp-for="Nombre" placeholder="Ana" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="login-field">
                <label asp-for="Apellido"></label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#128100;
                    </span>
                    <input asp-for="Apellido" placeholder="Pérez" />
                </div>
            </div>

            <div class="login-field">
                <label asp-for="UserName">Nombre de Usuario</label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#128100;
                    </span>
                    <input asp-for="UserName" placeholder="juan.marin" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>


            <div class="login-field">
                <label asp-for="Email">Correo Electrónico</label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#9993;
                    </span>
                    <input asp-for="Email" placeholder="tu@universidad.edu" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="login-field">
                <label asp-for="Password">Contraseña</label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#128274;
                    </span>
                    <input asp-for="Password" type="password" placeholder="••••••••" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="login-field">
                <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#128274;
                    </span>
                    <input asp-for="ConfirmPassword" type="password" placeholder="••••••••" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="login-button">
                <span>Crear Cuenta</span>
            </button>
        </form>

        <div class="recovery-back">
            <a asp-action="Index"
               asp-controller="Home"
               class="recovery-back-button">
                Volver al Login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
