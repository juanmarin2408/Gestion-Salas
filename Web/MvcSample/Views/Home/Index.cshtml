@{
    ViewData["Title"] = "Sistema de Gestión de Salas - Login";
    ViewBag.HideFooter = false;
}

<div class="login-page">
    <div class="login-card">
        <!-- Header -->
        <div class="login-card-header">
            <div class="login-card-icon">
                <!-- Puedes cambiar este icono por un SVG si quieres -->
                <span>✦</span>
            </div>
            <h1 class="login-title">Sistema de Gestión de Salas</h1>
            <p class="login-subtitle">
                Ingresa tus credenciales para acceder al sistema
            </p>
        </div>

        <!-- Formulario -->
        <form asp-action="Login" asp-controller="Home" method="post" class="login-form">
            @* Html.AntiForgeryToken()  // descomenta cuando tengas el action real *@

            @if (ViewBag.LoginError != null)
            {
                <div class="login-error">
                    @ViewBag.LoginError
                </div>
            }

            <div class="login-field">
                <label for="Email">Correo Electrónico</label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#9993;  @* icono de sobre *@
                    </span>
                    <input type="email"
                           id="Email"
                           name="Email"
                           placeholder="tu@universidad.edu"
                           required />
                </div>
            </div>

            <div class="login-field">
                <label for="Password">Contraseña</label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#128274;
                    </span>
                    <input type="password"
                           id="Password"
                           name="Password"
                           placeholder="••••••••"
                           required />
                </div>
            </div>

            <div class="login-extra">
                <a asp-action="ForgotPassword"
                   asp-controller="Home"
                   class="login-link">
                    ¿Olvidaste tu contraseña?
                </a>


            </div>

            <button type="submit" class="login-button">
                <span>Iniciar Sesión</span>
                <span class="login-button-arrow">➜</span>
            </button>
            <div class="login-register-cta">
                <span class="login-register-text">¿Aún no tienes cuenta?</span>
                <a asp-action="Register"
                   asp-controller="Home"
                   class="login-register-button">
                    Crear cuenta
                </a>
            </div>

        </form>
    </div>
</div>
