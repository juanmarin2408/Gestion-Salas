@{
    ViewData["Title"] = "Sistema de Gestión de Salas - Login";
}

<div class="login-page">
    <div class="login-card">
        <!-- Header -->
        <div class="login-card-header">
            <div class="login-card-icon">
                <!-- Puedes cambiar este icono por un SVG si quieres -->
                <span>✦</span>
            </div>
            <h1 class="login-title">Sistema de Gestión de Salas</h1>
            <p class="login-subtitle">
                Ingresa tus credenciales para acceder al sistema
            </p>
        </div>

        <!-- Formulario -->
        <form asp-action="Login" asp-controller="Account" method="post" class="login-form">
            @* Html.AntiForgeryToken()  // descomenta cuando tengas el action real *@

            <div class="login-field">
                <label for="Email">Correo Electrónico</label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#9993;  @* icono de sobre *@
                    </span>
                    <input type="email"
                           id="Email"
                           name="Email"
                           placeholder="tu@universidad.edu"
                           required />
                </div>
            </div>

            <div class="login-field">
                <label for="Password">Contraseña</label>
                <div class="login-input-wrapper">
                    <span class="login-input-icon">
                        &#128274;
                    </span>
                    <input type="password"
                           id="Password"
                           name="Password"
                           placeholder="••••••••"
                           required />
                </div>
            </div>

            <div class="login-extra">
                <a asp-action="ForgotPassword"
                   asp-controller="Home"
                   class="login-link">
                    ¿Olvidaste tu contraseña?
                </a>

            </div>

            <button type="submit" class="login-button">
                <span>Iniciar Sesión</span>
                <span class="login-button-arrow">➜</span>
            </button>
        </form>

        <!-- Acceso rápido demo -->
        <div class="login-quick-access">
            <p class="quick-access-title">Acceso rápido · Demo</p>

            <button type="button"
                    class="quick-access-item"
                    data-email="admin@universidad.edu"
                    data-password="Admin123!"
                    data-role="Administrador">
                <div class="qa-avatar qa-avatar-admin">A</div>
                <div class="qa-text">
                    <span class="qa-role">Administrador</span>
                </div>
                <span class="qa-arrow">➜</span>
            </button>

            <button type="button"
                    class="quick-access-item"
                    data-email="coordinador@universidad.edu"
                    data-password="Coord123!"
                    data-role="Coordinador">
                <div class="qa-avatar qa-avatar-coord">C</div>
                <div class="qa-text">
                    <span class="qa-role">Coordinador</span>
                </div>
                <span class="qa-arrow">➜</span>
            </button>

            <button type="button"
                    class="quick-access-item"
                    data-email="usuario@universidad.edu"
                    data-password="User123!"
                    data-role="Usuario">
                <div class="qa-avatar qa-avatar-user">U</div>
                <div class="qa-text">
                    <span class="qa-role">Usuario</span>
                </div>
                <span class="qa-arrow">➜</span>
            </button>
        </div>
    </div>
</div>
